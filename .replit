modules = ["php-8.2", "bash", "nodejs-20", "web", "postgresql-16"]
run = "run command"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "run command"]

[workflows]
runButton = "Servidor PHP"

[[workflows.workflow]]
name = "Servidor PHP"
author = 46306102
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"php -S\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[ports]]
localPort = 5000
externalPort = 5000

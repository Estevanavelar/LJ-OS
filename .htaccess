# Configuração LJ-OS
RewriteEngine On

# Definir index.php como arquivo padrão
DirectoryIndex index.php

# Permitir acesso direto aos arquivos PHP
<Files "*.php">
    Require all granted
</Files>

# Configurar cabeçalhos de segurança básicos
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
</IfModule>

# Proteger arquivos sensíveis
<Files ".env">
    Require all denied
</Files>

<Files ".installed">
    Require all denied
</Files>

<Files "*.log">
    Require all denied
</Files>

{
    "name": "lj-os/php-project",
    "description": "Sistema LJ-OS - Projeto PHP com XAMPP",
    "type": "project",
    "keywords": ["lj-os", "php", "xampp", "web"],
    "license": "MIT",
    "authors": [
        {
            "name": "LJ-OS Team",
            "email": "dev@lj-os.com"
        }
    ],
    "require": {
        "php": ">=8.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "LJOS\\": "src/LJOS/"
        },
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "start": "php -S localhost:8000 -t public",
        "dev": "php -S localhost:8000 -t public -d display_errors=1 -d error_reporting=E_ALL",
        "analyze": "phpstan analyse src",
        "cs-check": "phpcs src",
        "cs-fix": "phpcbf src",
        "post-install-cmd": [
            "mkdir -p src tests public config logs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ]
}

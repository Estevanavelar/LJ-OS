# Exemplo de variáveis de ambiente para LJ-OS

# APP
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/LJ

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=lava_jato_db
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Security
SESSION_NAME=LJSESSIONID
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAMESITE=Lax
COOKIE_SECURE=false
CSP_ENABLED=false
HSTS_ENABLED=false

# APIs externas
API_CEP_URL=https://viacep.com.br/ws/
API_CEP_TIMEOUT=10
API_CNPJ_URL=https://publica.cnpj.ws/cnpj/
API_CNPJ_TIMEOUT=15
API_CNPJ_USER_AGENT=LJ-OS-Sistema/1.0

# Notificações
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_EMAIL=true
NOTIFICATIONS_SMS=false
NOTIFICATIONS_WHATSAPP=false

# WhatsApp/SMS (preencher se usar)
WHATSAPP_API_KEY=
WHATSAPP_API_URL=
WHATSAPP_PHONE_ID=
SMS_API_KEY=
SMS_API_URL=
SMS_SENDER=LJ-OS
